<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Package_Name" />

    <EditText
        android:id="@+id/Package_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:text="@string/Package_Name_default"
        android:hint="@string/Package_Name_hint" android:singleLine="true" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Campaign_Source" />

    <EditText
        android:id="@+id/Campaign_Source"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Campaign_Source_hint" android:singleLine="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Campaign_Medium" />

    <EditText
        android:id="@+id/Campaign_Medium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Campaign_Medium_hint" android:singleLine="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Campaign_Term" />

    <EditText
        android:id="@+id/Campaign_Term"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Campaign_Term_hint" android:singleLine="true"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Campaign_Content" />

    <EditText
        android:id="@+id/Campaign_Content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Campaign_Content_hint" android:singleLine="true"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Campaign_Name" />

    <EditText
        android:id="@+id/Campaign_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Campaign_Name_hint" android:singleLine="true"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/generate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/Generate_URL" />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/clear" />

    </LinearLayout>

    <EditText
        android:id="@+id/editText7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine" />

</LinearLayout>